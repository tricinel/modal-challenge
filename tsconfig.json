{
  "compilerOptions": {
    "baseUrl": "./",
    "keyofStringsOnly": true,
    "target": "es2017",
    "downlevelIteration": true,
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "isolatedModules": true,
    "stripInternal": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
